{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for SoloSoft Pipeline",
    "type": "object",
    "properties": {
        "metadata": {
            "$ref": "../metadata.json"
        },
        "pipeline-type": {
            "type": "string",
            "enum": [
                "SoloSoft"
            ]
        },
        "steps": {
            "type": "array",
            "items": {
                "$ref": "steps/step.json"
            },
            "additionalItems": false,
            "minimum": 1
        },
        "platelist": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "additionalItems": false
        }
    },
    "required": [
        "metadata"
    ],
    "additionalProperties": false
}