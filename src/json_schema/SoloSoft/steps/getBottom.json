{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for the SoloSoft Pause Step",
    "type": "object",
    "properties": {
        "metadata": {
            "$ref": "../../metadata.json"
        },
        "step_type": {
            "const": "GetBottom"
        },
        "position": {
            "type": "string"
        },
        "increment_row_order": {
            "type": "boolean"
        },
        "increment_column_order": {
            "type": "boolean"
        },
        "output_file_path": {
            "type": "string"
        },
        "wells_per_pass": {
            "type": "number"
        },
        "search_start_distance": {
            "type": "number"
        },
        "well_list": {
            "$ref": "../datatypes/plate96well-bool.json"
        }
    },
    "required": [
        "step_type"
    ],
    "additionalProperties": false
}