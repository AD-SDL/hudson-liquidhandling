{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for SoloSoft GetTip step.",
    "type": "object",
    "properties": {
        "metadata": {
            "$ref": "../../metadata.json"
        },
        "step_type": {
            "const": "GetTip"
        },
        "position": {
            "type": "string"
        },
        "disposal": {
            "type": "string"
        },
        "num_tips": {
            "type": "number"
        },
        "auto_tip_selection": {
            "type": "number",
            "enum": [
                0,
                1
            ]
        },
        "count_tips_from_last_channel": {
            "type": "boolean"
        }
    },
    "required": [
        "step_type"
    ],
    "additionalProperties": false
}