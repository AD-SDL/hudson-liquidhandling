{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for SoloSoft HitPicking Step",
    "type": "object",
    "properties": {
        "metadata": {
            "$ref": "../../metadata.json"
        },
        "step_type": {
            "const": "HitPicking"
        },
        "picks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "$ref": "aspirate.json"
                    },
                    "target": {
                        "$ref": "dispense.json"
                    }
                },
                "required": [
                    "source",
                    "target"
                ],
                "minItems": 1,
                "additionalProperties": false
            },
            "required": [
                "items"
            ]
        }
    },
    "required": [
        "picks",
        "step_type"
    ],
    "additionalProperties": false
}