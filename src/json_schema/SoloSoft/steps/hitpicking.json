{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for SoloSoft HitPicking Step",
    "type": "object",
    "properties": {
        "spec_version": {
            "type": "string"
        },
        "picks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "$ref": "SoloSoft\\steps\\aspirate.json"
                    },
                    "target": {
                        "$ref": "SoloSoft\\steps\\dispense.json"
                    }
                },
                "required": [
                    "source",
                    "target"
                ],
                "minItems": 1,
                "additionalProperties": false
            },
            "required": [
                "items"
            ]
        }
    },
    "required": [
        "spec_version",
        "picks"
    ],
    "additionalProperties": false
}