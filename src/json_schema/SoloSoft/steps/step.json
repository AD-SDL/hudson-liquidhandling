{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for SoloSoft Step",
    "type": "object",
    "properties": {
        "metadata": {
            "$ref": "../../metadata.json"
        },
        "step_type": {
            "type": "string"
        },
        "step_label": {
            "type": "string"
        },
        "step_definition": {
            "anyOf": [
                {"$ref": "aspirate.json"},
                {"$ref": "dispense.json"},
                {"$ref": "endLoop.json"},
                {"$ref": "getBottom.json"},
                {"$ref": "getTips.json"},
                {"$ref": "hitpicking.json"},
                {"$ref": "moveArm.json"},
                {"$ref": "pause.json"},
                {"$ref": "prime.json"},
                {"$ref": "setSpeed.json"},
                {"$ref": "shuckTips.json"},
                {"$ref": "startLoop.json"}
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "step_type",
        "metadata",
        "step_definition"
    ],
    "additionalProperties": false
}