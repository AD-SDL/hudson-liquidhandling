{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Schema for SoloSoft MovePlate Step",
    "type": "object",
    "properties": {
        "metadata": {
            "$ref": "../../metadata.json"
        },
        "step_type": {
            "const": "MovePlate"
        },
        "source_position": {
            "type": "string"
        },
        "target_position": {
            "type": "string"
        },
        "grip_offset": {
            "type": "number",
            "minimum": 0
        }
    },
    "required": [
        "step_type",
        "source_position",
        "target_position",
        "grip_offset"
    ],
    "additionalProperties": false
}